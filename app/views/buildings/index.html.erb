<h1>Building</h1>

<h3>Search by name</h3>

<%= form_tag(buildings_path, method: :get) do %>
    <%= text_field_tag :q %>
    <%= submit_tag 'search' %>
<% end %>

<table>
    <thead>
        <th>Name</th>
        <th>Address</th>
    </thead>

    <tbody>
        <% @buildings.each do |building| %>
            <tr>
                <td><%= building %></td>
                <td><%= building.address %></td>
                <td><%= link_to  "Show apartmens", building_apartments_path(building) %></td>
                <td><%= link_to  "Delete building", building, method: :delete, data: {confirm: 'are you sure?'} %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to  "New building", new_building_path %>